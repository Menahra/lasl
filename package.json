{
  "name": "lasl",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:fix": "pnpm -r format:fix",
    "check:ci": "pnpm -r check:ci",
    "check:fix": "pnpm -r check:fix",
    "check:types": "pnpm -r check:types",
    "test": "pnpm -r test",

    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    
    "docker:test": "docker compose -f docker-compose.yml -f docker-compose.test.yml up -d --build",
    "docker:test:down": "docker compose -f docker-compose.yml -f docker-compose.test.yml down",
    
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",

    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -af --volumes",
    "docker:clean:images": "docker image prune -af",
    "docker:clean:volumes": "docker volume prune -f",
    "docker:clean:containers": "docker container prune -f",
    "docker:clean:networks": "docker network prune -f"
  }
}
