{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "root": false,
  "extends": "//",
  "linter": {
    "rules": {
      "correctness": {
        "noNodejsModules": "off"
      },
      "performance": {
        "noNamespaceImport": "off",
        "useTopLevelRegex": "off"
      },
      "security": {
        "noSecrets": "off"
      },
      "style": {
        "noMagicNumbers": "off"
      }
    }
  }
}