{
  "name": "@lasl/e2e-tests",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "biome lint config fixtures tests utils",
    "lint:fix": "biome lint --write config fixtures tests utils",
    "format": "biome lint config fixtures tests utils",
    "format:fix": "biome format --write config fixtures tests utils",
    "check:ci": "biome check config fixtures tests utils",
    "check:fix": "biome check --write config fixtures tests utils",
    "check:types": "tsc",

    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "docker:up": "docker compose --env-file ../../.env.dev -f ../../docker-compose.e2e.yml up -d",
    "docker:down": "docker compose -f ../../docker-compose.e2e.yml down -v",
    "docker:logs": "docker compose -f ../../docker-compose.e2e.yml logs -f",
    "docker:restart": "pnpm docker:down && pnpm docker:up",

    "docker:clean": "pnpm docker:down && docker system prune -f",
    "docker:clean:all": "pnpm docker:down && docker system prune -af --volumes",
    "docker:clean:images": "docker image prune -af",
    "docker:clean:volumes": "docker volume prune -f",
    "docker:clean:containers": "docker container prune -f",
    "docker:clean:networks": "docker network prune -f"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "dotenv": "^17.2.3",
    "http-status-codes": "^2.3.0"
  }
}