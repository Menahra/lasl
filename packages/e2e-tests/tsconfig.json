{
    "extends": "../../tsconfig.base.json",
    "include": ["config/**/*", "fixtures/**/*", "tests/**/*", "utils/**/*"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/config/*": ["./config/*"],
            "@/fixtures/*": ["./fixtures/*"],
            "@/tests/*": ["./tests/*"],
            "@/utils/*": ["./utils/*"],
        },
        "incremental": false,
    }
}